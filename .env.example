INSTANCE_COUNT=5
INITIAL_INSTANCE_COUNT=2
USE_GPU=false
ENABLE_VNC=true
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080
TZ=Australia/Adelaide
LANG=en_US.UTF-8
DASHBOARD_PORT=8080
DASHBOARD_USER=admin
DASHBOARD_PASS=changeme

# EXTERNAL_PORT_PREFIX: Set to 1 for TrueNAS/port prefix (e.g., 19222 instead of 9222)
# Set to 0 or leave unset for standard ports
EXTERNAL_PORT_PREFIX=0

# DYNAMIC_MODE: Enable path-based routing with on-demand instances
# Set to 'true' for dynamic provisioning, 'false' or unset for static instances
DYNAMIC_MODE=false

# Dynamic mode configuration (only used when DYNAMIC_MODE=true)
MAX_DYNAMIC_INSTANCES=20
INSTANCE_TIMEOUT_MINUTES=30
CDP_GATEWAY_PORT=9222
