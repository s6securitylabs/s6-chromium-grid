# S6 Chromium Grid - Production Environment Configuration
# Copy this file to .env and customize for your deployment

# === Dashboard Configuration ===
DASHBOARD_USER=admin
DASHBOARD_PASS=admin  # CHANGE THIS IN PRODUCTION!

# === Mode Configuration ===
DYNAMIC_MODE=false
INSTANCE_COUNT=10
INITIAL_INSTANCE_COUNT=1

# === Metrics Configuration ===
ENABLE_METRICS_HISTORY=true
METRICS_RETENTION_DAYS=7
METRICS_INTERVAL_SECONDS=5

# === Display Configuration ===
ENABLE_VNC=true
USE_GPU=false
SCREEN_WIDTH=1920
SCREEN_HEIGHT=1080

# === System Configuration ===
TZ=Australia/Adelaide

# === CDP Port Configuration ===
CDP_PORT_START=9222

# === Resource Limits ===
CPU_LIMIT=4
MEMORY_LIMIT=16g
CPU_RESERVATION=1
MEMORY_RESERVATION=2g

# === SSL Configuration ===
SSL_CN=s6-chromium-grid.lan.sweet6.net
SSL_DAYS=3650  # 10 years

# === Docker Image ===
IMAGE_TAG=2.2.0
